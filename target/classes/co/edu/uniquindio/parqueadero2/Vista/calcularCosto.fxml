<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.parqueadero2.Controlador.CalcularCostoController" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
    <Label text="Código del Parqueadero:"/>
    <TextField fx:id="codigoParqueaderoField" GridPane.columnIndex="1"/>

    <Label text="Placa del Vehículo:" GridPane.rowIndex="1"/>
    <TextField fx:id="placaVehiculoField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Horas Estacionado:" GridPane.rowIndex="2"/>
    <TextField fx:id="horasEstacionadoField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button text="Calcular" onAction="#calcularCosto" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
    <Label fx:id="costoLabel" GridPane.columnSpan="2" GridPane.rowIndex="4"/>
    <Button text="Volver" onAction="#volver" GridPane.columnSpan="2" GridPane.rowIndex="5"/>
</GridPane>
